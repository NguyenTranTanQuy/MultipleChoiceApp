<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="414dp"
        android:layout_height="46dp"
        android:background="@drawable/background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:text="Thêm môn học:"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginRight="10sp"
            android:backgroundTint="#00FFFFFF"
            android:foreground="@drawable/baseline_home_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:text="Tên môn học:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30sp"/>
        <EditText
            android:layout_width="380sp"
            android:layout_height="70sp"
            android:background="@drawable/borders"
            android:hint="Tên"
            android:layout_marginLeft="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="horizontal"
            android:layout_marginTop="360sp">
            <Button
                android:layout_width="150sp"
                android:layout_height="60sp"
                android:text="Lưu"
                android:layout_marginLeft="40sp"
                android:textSize="20sp"
                android:backgroundTint="#132271"
                android:id="@+id/txtAddTopic"/>
            <Button
                android:layout_width="150sp"
                android:layout_height="60sp"
                android:text="Thoát"
                android:textSize="20sp"
                android:layout_marginLeft="10sp"
                android:backgroundTint="#132271"
                android:id="@+id/txtExitTopic"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>